<h2>Sign In</h2>

<%= form_tag("/signin") do %>		

	<% if @error %>
		<div class="alert alert-danger" role="alert">
			<%= @error %>		
		</div>
	<% end %>

	<div class="form-group">
		<label>Email: </label>
		<%= text_field_tag(:email, "#{@email}")%>
	</div>
	<div class="form-group">
		<label>Password: </label>
		<%= password_field_tag(:password, "#{@password}") %>
	</div>
	
	<%= submit_tag("SignIn") %>
<% end %>